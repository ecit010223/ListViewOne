<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_head_title_height"
    android:background="@android:color/black" >

    <TextView
        android:id="@+id/tv_public_black_head_title_middle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textColor="@color/public_head_ffffff"
        android:textSize="@dimen/font_A"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_public_black_head_title_left_white_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/zq_public_head_margin_A"
        android:paddingRight="@dimen/zq_public_head_margin_B"
        android:src="@drawable/zq_selector_back_btn_white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_public_black_head_title_left_note"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/zq_public_head_margin_A"
        android:paddingRight="@dimen/zq_public_head_margin_B"
        android:src="@drawable/zq_selector_bianji_btn"
        android:visibility="gone" />

</RelativeLayout>